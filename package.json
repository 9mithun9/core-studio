{
  "name": "pilates-studio-platform",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "api",
    "web",
    "worker"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:web\"",
    "dev:api": "npm run dev --workspace=api",
    "dev:web": "npm run dev --workspace=web",
    "dev:worker": "npm run dev --workspace=worker",
    "build": "npm run build --workspaces",
    "start": "npm run start --workspaces",
    "clean": "rm -rf node_modules api/node_modules web/node_modules worker/node_modules"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "typescript": "^5.3.3"
  }
}
