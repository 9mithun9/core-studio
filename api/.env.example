LINE_WEBHOOK_URL=http://localhost:5000/api/webhook/line

# Booking Rules
MIN_BOOKING_HOURS_ADVANCE=24
SESSION_DURATION_MINUTES=60
CANCELLATION_HOURS_BEFORE=24

# Email (Optional - for future use)
SMTP_HOST=smtp.gmail.com
